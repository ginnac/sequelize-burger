

<div class="container" id="box">

     <div class="row">
        <div class="col-sm">
           
             <h1 class="title">Eat-Da-Burger!</h1>

             <img id="center" src="http://www.pngmart.com/files/1/Healthy-Burger-PNG.png" alt="Burger">
         

        </div>

     </div>

    <div class="row">

        <div class="col-sm">

            <h2>Burger's Waiting list:</h2>
            <ul>
                {{#each customers}}
                    {{#each Burgers}}
                        {{#unless dataValues.devoured}}
                            {{>customers/burger-block eaten=false}}
                                <br>
                        {{/unless}}
                    {{/each}}
                {{/each}}
            </ul>
        </div>



        <div class="col-sm">

            <h2>Devoured burgers!</h2>

                <ul>
                    {{#each customers}}
                        {{#if dataValues.real_customer}}
                            {{#each Burgers}}
                                {{#if dataValues.devoured}}
                            
                        <li>
	                                {{burger_name}}
                                    <button class="delete-burger btn btn-dark" data-id="{{this.dataValues.id}}">Delete</button>   
                        </li>
                                {{/if}}
                            {{/each}}
                        
                         <p> Eaten by customer: {{dataValues.customer_name}} </p>
                        <br>
                        {{/if}}
                    {{/each}}
                </ul>
        
        </div>

    
    </div>

<div class="row">
    <div class="col-sm">
        <h2 class="title">Add a Burger!</h2>
        <form class="create-form">

            <div  class="form-group title">
                <label for="name">Burger Name:</label>
                <input type="text" id="burgerName" name="name">
            </div>

            <button class="btn btn-dark" id="center" type="submit">Add burger</button>
        </form>

    </div>

</div>
</div>